<%= form_tag tutor_path(@tutor),  :class => "form-horizontal", :method => :put do %>
  <fieldset>
    <legend>Tutor Information Form</legend>
    <div class="form-group">
      <%= label :tutor, :first_name, 'First Name', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'first_name', placeholder: "First Name", :value => nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :last_name, 'Last Name', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'last_name', placeholder: "Last Name", :value => nil, :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :sid, 'SID', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'sid', placeholder: "SID", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :year, 'Year', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'year', placeholder: "Year", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :email, 'Email', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'email', placeholder: "Email", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :phone_number, 'Phone Number', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'phone_number', placeholder: "Phone Number", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :major, 'Major', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'major', placeholder: "Major", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :tutor_cohort, 'Tutor Cohort', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_field :tutor, 'tutor_cohort', placeholder: "Tutor Cohort", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= label :tutor, :bio, 'Biography', :class => 'col-lg-4 control-label' %>
      <div class="col-lg-5">
        <%= text_area :tutor, 'bio', placeholder: "Tell us something about yourself!", :class => "form-control" %>
      </div>
    </div>
    <div class="form-group">
          <%= label :tutor, 'Available Times', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
              <table class="table table-striped table-hover table-bordered">
                <tr class="table-info">
                  <th></th>
                  <% TimeAvailability.group(:start_time).order(:id).each do |t| %>
                    <th><%= t.start_time %> - <%= (t.start_time + 1).to_s %></th>
                  <% end %>
                </tr>
                <% counter = 1 %>
                <% TimeAvailability.group(:day).order(:id).each do |t| %>
                  <tr>
                    <th><%= t.day %></th>
                    <% TimeAvailability.group(:start_time).order(:id).each do |t| %>
                      <td><%= check_box_tag "tutor[time_availabilitys_ids][]", counter, @tutor.time_availabilitys.include?(t) %> </td>
                      <% counter += 1 %>
                    <% end %>
                  </tr>
                <% end %>
              </table>
          </div>
        </div>
        <center>
        <button id="select_all" type="button">Uncheck All</button>
        </center>
    <div class="form-group">
    <div class="form-group">
      <div class="col-lg-6 col-lg-offset-3">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
<% end %>