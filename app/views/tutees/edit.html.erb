
  <%= form_tag tutee_path(@tutee), :class => "form-horizontal", :method => :put do %>
    <form>
      <fieldset>
        <div class="form-group">
          <%= label :tutee, :first_name, :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'first_name', placeholder: "John", :value => nil, :class => "form-control"%>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :last_name, 'Last Name', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'last_name', placeholder: "Doe", :value => nil, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">  
          <%= label :tutee, :sid, 'SID', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'sid', placeholder: "12345678", :value => nil, :class => "form-control"  %>
          </div>
        </div>
        <div class="form-group">  
          <%= label :tutee, :grade, 'Current Grade', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'grade', placeholder: "senior", :value => nil, :class => "form-control"  %>
          </div>
        </div>
        <div class="form-group">  
          <%= label :tutee, :email, 'Email', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'email', placeholder: "john.doe@berkeley.edu", :value => nil, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">  
          <%= label :tutee, :phone_number, 'Phone Number', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'phone_number', placeholder: "XXX-XXX-XXXX", :value => nil, :class => "form-control"  %>
          </div>
        </div>
        <div class="form-group">  
          <%= label :tutee, :semesters_at_cal, 'Semesters at Cal', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'semesters_at_cal', placeholder: "7", :value => nil, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= label :tutee, :major, 'Major', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'major', placeholder: "Media Studies", :value => nil, :class => "form-control" %>
          </div>
        </div>
        <div class="form-group">  
          <%= label :tutee, :requested_class, 'Class Requesting Help In', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= text_field :tutee, 'requested_class', placeholder: "Art History 100", :value => nil, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, 'Available Times', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
              <table class="table table-striped table-hover table-bordered">
                <tr class="table-info">
                  <th></th>
                  <% TimeAvailability.group(:start_time).order(:id).each do |t| %>
                    <th><%= t.start_time %></th>
                  <% end %>
                </tr>
                <% TimeAvailability.group(:day).order(:id).each do |t| %>
                  <tr>
                    <th><%= t.day %></th>
                    <% TimeAvailability.group(:start_time).order(:id).each do |t| %>
                      <td><%= check_box_tag 'time' %></td>
                    <% end %>
                  </tr>
                <% end %>
              </table>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :DSP, 'Disabled Students Program (DSP)', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee, "DSP" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :EOP, 'Educational Opportunity Program', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee,"EOP" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :SBC, 'Summer Bridge Cohort 2017', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee,"SBC" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :FPF, 'Fall Prograrm for Freshman', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee,"FPF" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :TRSP, 'Transfer, Re-Entry, or Student Parent (TRSP)', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee,"TRSP" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :UCIEP, 'UC Intercampus Exchange Program (UCIEP)', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee,"UCIEP" %>
          </div>
        </div>

        <div class="form-group">
          <%= label :tutee, :BISP, 'Berkeley International Study Program', :class => 'col-lg-4 control-label' %>
          <div class="col-lg-5">
            <%= check_box :tutee,"BISP" %>
          </div>
        </div>

        

        <center>
        <%= submit_tag 'Submit' %>
        </center>

      <% end %>
    </fieldset>
</form>


