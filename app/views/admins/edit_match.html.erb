<table class="table table-striped table-hover table-bordered" style="width: auto;" align="center">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Reassign</th>
    </tr>
  </thead>
  <tbody>
    <% @avail_tutors.each do |tutor| %>                    
        <tr>
          <td><%= tutor.first_name %></td>
          <td><%= tutor.last_name %></td>
          <td><%= button_to "Assign", assign_path(@tutee, tutor), :method => :get, :class => "btn btn-outline-primary" %></td>
        </tr>
    <% end %>
  </tbody>
</table> 