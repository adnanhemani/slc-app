<h1 align="center">Tutors</h1>

<table class="table table-striped table-hover table-bordered" style="width: auto;" align="center">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>SID</th>
      <th>Phone Number</th>
      <th>Year</th>
    </tr>
  </thead>
  <tbody>
    <% @tutors.each do |name| %>                    
        <tr>
          <td><%= name.first_name %></td>
          <td><%= name.last_name %></td>
          <td><%= name.email %></td>
          <td><%= name.sid %></td>
          <td><%= name.phone_number %></td>
          <td><%= name.year %></td>
        </tr>
    <% end %>
  </tbody>
</table> 


